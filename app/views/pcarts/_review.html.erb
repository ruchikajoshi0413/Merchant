<div class="container wrapper">
  <div class="row cart-body">
    <form class="form-horizontal" method="post" action="">
      
      <div class="" >
      
        <!--REVIEW ORDER-->
        <div class="panel panel-info">

          <div class="panel-heading">
            Review Order
          </div>
          <div class="panel-body">
          <% @pcarts.each do |cart| %>
            <div class="form-group">
              <div class="col-sm-3 col-xs-3">
                <img
                  class="img-responsive"
                  src="<%= cart&.product&.image %>"
                />
              </div>
              <div class="col-sm-6 col-xs-6">
                <div class="col-xs-12"><a href="pcarts/<%= cart.id %>"><%= cart&.product&.name %></div>
                <div class="col-xs-12">
                  <small>Quantity:<span>1</span></small>
                </div>
              </div>
              <div class="col-sm-3 col-xs-3 text-right">
                <h6><span>$</span><%= cart&.product&.price %></h6>
                <p><%= link_to "Remove", remove_item_pcart_path(cart) %></p>
                <p><%#= link_to "Remove",  "/pcarts/#{cart.id}/remove_item" %></p>
                <p><%#= link_to "Order", orders_pcart_path(cart) %></p>
                <a href = "/pcarts/<%= cart.id %>/orders">Order</a>
                <p><%#= link_to "Wishlist",  orders_wishlist_path(cart) %></p>
                <a href = "/products/<%= cart.product.id %>/wishlists">Wishlist</a>
              </div>
            </div>
          <% end %>
            
            <div class="form-group"><hr /></div>
            <div class="form-group">
              <div class="col-xs-12">
                <strong>Subtotal</strong>
                <div class="pull-right"><span>$</span><span>200.00</span></div>
              </div>
              <div class="col-xs-12">
                <small>Shipping</small>
                <div class="pull-right"><span>-</span></div>
              </div>
            </div>
            <div class="form-group"><hr /></div>
            <div class="form-group">
              <div class="col-xs-12">
                <strong>Order Total</strong>
                <div class="pull-right"><span>$</span><span>150.00</span></div>
              </div>
            
            </div>
            
            <div class="form-group">
                <div class="col-xs-12">
                  <div class="pull-right"><span></span><span><a class="btn-primary btn" href="">Checkout</a></span></div>
                </div>
              </div>
          </div>
          
        </div>
      </div>
    </form>
  </div>
</div>